<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaGodots"
             x:Class="AvaGodots.App"
             RequestedThemeVariant="Default">

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme/>
    <StyleInclude Source="avares://AvaGodots/Resources/Theme.axaml"/>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceInclude x:Key="L10N.en" Source="avares://AvaGodots/Resources/Lang/en.axaml"/>
      <ResourceInclude x:Key="L10N.zh-CN" Source="avares://AvaGodots/Resources/Lang/zh-CN.axaml"/>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://AvaGodots/Resources/Icons.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

</Application>
